{% extends "layout.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block content %}
    <div id="jumbo" class="jumbotron">
        <div class="container">
            <h1>Le livre en ligne</h1>
            <p>By Jean Forteroche</p>
        </div>
        <div id="btnRead" class="row">
            <a id="spyingScroll" href="#accordion" class="btn btn-lg col-xl-2 col-xs-offset-5">Très bonne lecture...<br><span class="glyphicon glyphicon-circle-arrow-down"></span></a>
        </div>
    </div>
    <div class="container">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-target">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#jumbo">Billet simple pour l'Alaska</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse-target">
                </div>
            </div>
        </nav>
        <div id="accordion" class="col-xl-10 col-xs-offset-1">
        {% for article in articles %}
            <h3>{{ article.title }}</h3>
            <article>
                <p>{{ article.content|nl2br}}</p>
                <small class="pull-right">Publié le {{ article.date }} par Jean Forteroche</small>
                <br><hr>
                <div id="btnComment" class="row col-xs-12">
                <a class="btn col-xl-2 col-xs-offset-5" href="{{ path('article', { 'id': article.id }) }}">Commentaires<br><span class="glyphicon glyphicon-comment"></span></a>
                </div>
            </article>
        {% endfor %}
        </div>
    </div>
{% endblock %}