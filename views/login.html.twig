{% extends "layout.html.twig" %}

{% block title %}Authentication{% endblock %}
{% block content %}
    <div class="container">
        <h2 class="text-center">{{ block('title') }}</h2>
        {% if error %}
        <div class="alert alert-danger">
            <strong>Le nom d'utilisateur ou le mot de passe est erron√©</strong> {{ error }}
        </div>
        {% endif %}
        <div class="well">
            <form class="form-signin form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                    <input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="Nom d'utilisateur" required autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                        <input type="password" name="_password" class="form-control" placeholder="Mot de passe" required>
                    </div>
                </div>
                <div class="form-group">
                    <div id="btnConnect" class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                        <button type="submit" class="btn col-xl-2 col-xs-offset-4">Se connecter<br><span class="glyphicon glyphicon-log-in"></span></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}